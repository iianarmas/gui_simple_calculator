CalcLayout:

<CalcLayout>:
    orientation: "vertical"
    BoxLayout:
        canvas:
            Color:
                rgba: .95, .95, .95, 1
            Rectangle:
                size: self.size
                pos: self.pos
        size_hint: 1, 1
        padding: ("15dp", "15dp", "15dp", "15dp")

    BoxLayout:
        canvas:
            Color:
                rgba: .95, .95, .95, 1
            Rectangle:
                size: self.size
                pos: self.pos
        size_hint: 1, 2
        padding: ("10dp", "10dp", "5dp", "0dp")
        Label:
            text: root.screen_text
            text_size: self.size
            halign: "left"
            valign: "top"
            font_size: "30dp"
            font_name: "fonts/Lcd.ttf"
            color: .095, .095, .095, .6

    BoxLayout:
        canvas:
            Color:
                rgba: .95, .95, .95, 1
            Rectangle:
                size: self.size
                pos: self.pos
        size_hint: 1, 2
        padding: ("15dp", "15dp", "15dp", "15dp")

        Label:
            text: root.new_value
            text_size: self.size
            halign: "right"
            font_size: "70dp"
            font_name: "fonts/Lcd.ttf"
            color: .095, .095, .095, 1
    BoxLayout:
        Button:
            id: btn_7
            text: "7"
            font_size: "20dp"
            color: 0, 0, 0, 1
            background_normal: ''
            background_color: 255, 255, 255, 255
            background_down: "#c3d2e9"
            on_press: root.on_button_7_click()
            on_press: btn_7.background_color="#c3d2e9"
            on_release: btn_7.background_color=255, 255, 255, 255

        Button:
            id: btn_8
            text: "8"
            font_size: "20dp"
            color: 0, 0, 0, 1
            background_normal: ''
            background_color: 255, 255, 255, 255
